{
    "ReverseProxy": {
        "Routes": {
            "orders": {
                "ClusterId": "OrdersCluster",
                "Match": { "Path": "/api/orders/{**catchall}" }
            },
            "catalog": {
                "ClusterId": "CatalogCluster",
                "Match": { "Path": "/api/catalog/{**catchall}" }
            },
            "reviews": {
                "ClusterId": "ReviewsCluster",
                "Match": { "Path": "/api/reviews/{**catchall}" }
            },
            "aggregator": {
                "ClusterId": "AggregatorCluster",
                "Match": { "Path": "/api/aggregator/{**catchall}" }
            }
        },
        "Clusters": {
            "OrdersCluster": { "Destinations": { "Orders": { "Address": "http://orders:5001/" } } },
            "CatalogCluster": { "Destinations": { "Catalog": { "Address": "http://catalog:5002/" } } },
            "ReviewsCluster": { "Destinations": { "Reviews": { "Address": "http://reviews:5003/" } } },
            "AggregatorCluster": { "Destinations": { "Aggregator": { "Address": "http://aggregator:5004/" } } }
        }
    }
}
